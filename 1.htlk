.container{
    height: 700px;
    width: fit-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    /* background-color: red; */
    overflow: hidden;
    box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
}



.side-up{
    height: 70%;
    width: 100%;
    /* background-color: gainsboro; */
    display: flex;
    align-items:center;
    gap: 20px;
    flex-direction: column;
}

.logo{
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 8px;
    height: 20%;
    width: 90%;
    border-bottom: solid 4px #da4167;
}
.logo img{
    height: 35px;
    width: 69px;
    transition: 0.5s;

}

.links{
    height: 80%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    /* background-color: green; */
    gap:9px;
    margin-left: 40px;

}


.links div{
    display: flex;
    gap:12px;
    align-items: center;
    width: 150px;
    padding: 9px;
    border-radius: 6px;
    transition: .5s;
    text-align: center;

}

a{
    text-decoration: none;
    color: #2E4057;

}

.links i{
    height:24px;
    width:24px;
    color: #2E4057;
    display: flex;
    align-items: center;
    justify-content: center;
}

.side-down{
    height: 30%;
    /* background-color: aqua; */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    gap:16px;
}


.links div:hover{
    background-color: #EAEAEA;
    transition: .5s;
    transform: scale(1.1);
}

.logo img:hover{
    height: 35px;
    width: 69px;
    transform: scale(1.1);
    transition: 0.5s;

}

